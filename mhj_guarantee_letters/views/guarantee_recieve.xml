<odoo>
    <data>
        <record id="recieve_guarantee_tree_view" model="ir.ui.view">
            <field name="name">recieve Gurantee</field>
            <field name="model">guarantee.recieve</field>
            <field name="arch" type="xml">
                <tree string="recieve Gurantee">
                    <field name="partner_id"/>
                    <field name="bank_id"/>
                    <field name="letter_amount"/>
                    <field name="transaction_date"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="type"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="recieve_guarantee_form_view" model="ir.ui.view">
            <field name="name">recieve Gurantee</field>
            <field name="model">guarantee.recieve</field>
            <field name="arch" type="xml">
                <form string="recieve Gurantee">
                    <sheet>
                        <group>
                            <group>
                                <field name="type" required="1"/>
                                <field name="letter_guarantee_id" invisible="1"/>
                                <field name="cheque_no" attrs="{'invisible':[('type','!=', 'cheque')],'required':[('type','=', 'cheque')]} "/>
                                <field name="transaction_date"/>
                                <field name="start_date"  attrs="{'invisible':[('type','!=', 'letter')],'required':[('type','=', 'letter')]} "/>
                                <field name="end_date"  attrs="{'invisible':[('type','!=', 'letter')],'required':[('type','=', 'letter')]} "/>
                                <field name="due_date"  attrs="{'invisible':[('type','!=', 'cheque')],'required':[('type','=', 'cheque')]} "/>
                                <field name="vendor_id" required="1"/>
                            </group>
                            <group>
                                <field name="state" required="1"/>
                                <field name="cheque_amount" attrs="{'invisible':[('type','!=', 'cheque')],'required':[('type','=', 'cheque')]} "/>
                                <field name="partner_id" />
                                <field name="bank_id" />
                                <field name="letter_amount" attrs="{'invisible':[('type','!=', 'letter')]} "/>
                                <field name="letter_number" attrs="{'invisible':[('type','!=', 'letter')]} "/>
                            </group>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="recieve_guarantee_action_view" model="ir.actions.act_window">
            <field name="name">Recieve Gurantee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">guarantee.recieve</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="recieve_guarantee_act_menu" name="Recieve Gurantee" parent="letter_guarantee_categ_menu"
                  action="recieve_guarantee_action_view"/>


    </data>
</odoo>