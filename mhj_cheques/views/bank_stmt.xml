<odoo>
    <record id="acc_stmt_form" model="ir.ui.view">
        <field name="name">acc_stmt_form</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form" />
        <field name="arch" type="xml">
            <field name='journal_id' position="after">
                <field name="is_cheque" invisible="1" />
            </field>
            <field name='partner_id' position="attributes">
                <attribute name="attrs">
                    {
                    'readonly':[('parent.state','!=','open')], 'required':[('parent.is_cheque','=',True)],
                    }    
                </attribute>
            </field>
            <xpath expr="//field[@name='line_ids']/tree" position="inside">
                <field name="is_cheque" invisible="1" />
                <field name="cheque_bank" options="{'no_create':True}" 
                attrs="{
                    'required':[('parent.is_cheque','=',True)], 
                    'column_invisible':[('parent.is_cheque','=',False),], 
                    'readonly':[('parent.state','!=','open')]
                    }" />
                <field name="cheque_no" 
                attrs="{
                    'required':[('parent.is_cheque','=',True)], 
                    'column_invisible':[('parent.is_cheque','=',False),], 
                    'readonly':[('parent.state','!=','open')]
                    }" />
            </xpath>
        </field>
    </record>
</odoo>