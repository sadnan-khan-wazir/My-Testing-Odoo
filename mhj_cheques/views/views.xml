<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="group_cheques" model="res.groups">
    <field name="name">Cheques Mgmt</field>
  </record>
  <menuitem id="menu_cheques" name="Cheques" groups="group_cheques" sequence="5" web_icon="mhj_cheques,static/description/icon.png"/>

  <record id="journal_form" model="ir.ui.view">
    <field name="name">journal_form</field>
    <field name="model">account.journal</field>
    <field name="inherit_id" ref="account.view_account_journal_form"/>
    <field name="arch" type="xml">
      <field name="type" position="after">
        <field name="is_cheque"/>
      </field>
      <field name="default_account_id" position="attributes">
        <attribute name="domain">[('deprecated','=',False)]</attribute>
      </field>
    </field>
  </record>
  <record id="acc_form" model="ir.ui.view">
    <field name="name">acc_form</field>
    <field name="model">account.account</field>
    <field name="inherit_id" ref="account.view_account_form"/>
    <field name="arch" type="xml">
      <group name="left_main_group" position="inside">
        <field name="is_cheque"/>
      </group>
    </field>
  </record>

  <!-- Payment views -->
  <record id="cheque_payment_tree_view" model="ir.ui.view">
    <field name="name">cheque_payment_tree_view</field>
    <field name="model">account.payment</field>
    <field name="arch" type="xml">
      <tree decoration-info="state=='draft'" decoration-muted="state=='reconciled'" edit="false" create="0">
        <field name="cheque_no"/>
        <field name="cheque_bank"/>
        <field name="cheque_date"/>
        <field name="date"/>
        <field name="name"/>
        <field name="journal_id"/>
        <field name="payment_method_id" invisible="1"/>
        <field name="partner_id" string="Customer"/>
        <field name="amount" sum="Amount"/>
        <field name="state" invisible="1"/>
        <field name="company_id" groups="base.group_multi_company"/>
        <field name="currency_id" invisible="1"/>
        <field name="partner_type" invisible="1"/>
      </tree>
    </field>
  </record>

  <record id="cheque_create_view" model="ir.ui.view">
    <field name="name">cheque_create_view</field>
    <field name="model">account.payment</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
      <field name="partner_id" position="after">
        <field name="is_cheque" invisible="1"/>
        <field name="partner_id" string="Customer" attrs="{'invisible': [('partner_type', '!=', 'customer')],'readonly': [ ('state', '!=', 'draft')]}"/>
        <field name="partner_id" string="Vendor" attrs="{'invisible': [('partner_type', '!=', 'supplier')],'readonly': [ ('state', '!=', 'draft')]}"/>
      </field>
      <field name="partner_id" position="replace"/>
      <field name="journal_id" position="after">
        <field name="cheque_journal_id" required="1" domain="[('is_cheque','=',True)]" />
        <field name="cheque_date" required="1" attrs="{'invisible': [('is_cheque', '=', False)], 'readonly': [ ('state', '!=', 'draft')]}"/>
        <field name="cheque_no" required="1" attrs="{'invisible': [('is_cheque', '=', False)], 'readonly': [ ('state', '!=', 'draft')]}"/>
        <field name="cheque_bank" required="1" attrs="{'invisible': [('is_cheque', '=', False)], 'readonly': [ ('state', '!=', 'draft')]}"/>
      </field>
      <field name="journal_id" position="attributes">
        <attribute name="invisible">1</attribute>
      </field>
      <field name="payment_type" position="attributes">
        <attribute name="invisible">1</attribute>
      </field>
      <field name="partner_type" position="attributes">
        <attribute name="invisible">1</attribute>
      </field>
      <field name="is_internal_transfer" position="attributes">
        <attribute name="invisible">1</attribute>
      </field>
    </field>
  </record>

  <record id="cheque_receive_action" model="ir.actions.act_window">
    <field name="name">Receive Cheques</field>
    <field name="display_name">Receive Cheques</field>
    <field name="view_id" ref="cheque_create_view"/>
    <field name="res_model">account.payment</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'default_is_cheque':1, 'default_payment_type':'inbound','default_partner_type':'customer',} </field>
  </record>

  <record id="cheque_send_action" model="ir.actions.act_window">
    <field name="name">Send Cheques</field>
    <field name="view_id" ref="cheque_create_view"/>
    <field name="res_model">account.payment</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'default_is_cheque':1, 'default_payment_type':'outbound','default_partner_type':'supplier',} </field>
  </record>

  <record id="cheque_payment_list_action" model="ir.actions.act_window">
    <field name="name">Draft Cheques</field>
    <field name="res_model">account.payment</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'default_is_cheque':1, 'journal_type':['cash'],'journal_cheque_val':[1],} </field>
    <field name="domain">[('is_cheque','!=',False),('state','=','draft')]</field>
    <field name="view_ids" eval="[(5, 0, 0), 
    (0, 0, {'view_mode': 'tree', 'view_id': ref('cheque_payment_tree_view')}), 
    (0, 0, {'view_mode': 'form', 'view_id': ref('cheque_create_view')}),
    ]"/>
  </record>

  <menuitem id="menu_draft_cheques" action="cheque_payment_list_action" name="Draft Cheques" parent="menu_cheques" sequence="1"/>
  <menuitem id="menu_cheques_register" name="Register Cheques" parent="menu_cheques" sequence="2"/>
  <menuitem id="menu_cheque_receive_action" action="cheque_receive_action" name="Receive Cheques" parent="menu_cheques_register" sequence="2"/>
  <menuitem id="menu_cheque_send_action" action="cheque_send_action" name="Send Cheques" parent="menu_cheques_register" sequence="3"/>

  <!-- AML views -->
  <record id="chq_search_view" model="ir.ui.view">
    <field name="name">chq_search_view</field>
    <field name="model">account.move.line</field>
    <field name="inherit_id" ref="account.view_account_move_line_filter"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='name']" position="before">
        <field name="cheque_no" filter_domain="[('cheque_no','ilike',self)]" string="Cheque No"/>
      </xpath>
    </field>
  </record>

  <record id="cheque_view_tree" model="ir.ui.view">
    <field name="name">cheque_view_tree</field>
    <field name="model">account.move.line</field>
    <field name="arch" type="xml">
      <tree string="Cheques" create="0" edit="0" delete="0">
        <field name="cheque_no" readonly="1"/>
        <field name="cheque_bank" readonly="1"/>
        <field name="cheque_date" readonly="1"/>
        <field name="date" readonly="1"/>
        <field name="move_id" invisible="1"/>
        <field name="journal_id" readonly="1" options="{&quot;no_open&quot;:True}"/>
        <field name="name" invisible="1"/>
        <field name="statement_id" invisible="1"/>
        <field name="partner_id" readonly="1"/>
        <field name="ref" readonly="1"/>
        <field name="account_id" readonly="1" string="Status"/>
        <field name="analytic_account_id" invisible="1"/>
        <field name="reconciled" invisible="1"/>
        <field name="full_reconcile_id" invisible="1"/>
        <field name="debit" invisible="1"/>
        <field name="credit" invisible="1"/>
        <field name="balance" string="Amount" readonly="1" sum="balance" />
        <field name="amount_currency" readonly="True" groups="base.group_multi_currency"/>
        <field name="currency_id" readonly="True" groups="base.group_multi_currency"/>
        <field name="date_maturity" invisible="1"/>
        <field name="company_currency_id" invisible="1"/>
        <field name="company_id" invisible="1"/>
        <field name="full_reconcile_id"/>
        <field name="move_id"/>
      </tree>
    </field>
  </record>

  <record id="cheque_sent_list_action" model="ir.actions.act_window">
    <field name="name">Cheques sent</field>
    <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('cheque_view_tree')})]"/>
    <field name="res_model">account.move.line</field>
    <field name="view_mode">form,tree</field>
    <field name="context">{}</field>
    <field name="domain">[('account_id.user_type_id.type','not in',['receivable','payable']),('account_id.reconcile','=',True),('account_id.is_cheque','=',True), ('full_reconcile_id','=',False),('is_cheque','=',True), ('credit','&gt;',0.0)]
    </field>
  </record>

  <record id="cheque_received_list_action" model="ir.actions.act_window">
    <field name="name">Cheques received</field>
    <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('cheque_view_tree')})]"/>
    <field name="res_model">account.move.line</field>
    <field name="view_mode">form,tree</field>
    <field name="context">{}</field>
    <field name="domain"> [('account_id.user_type_id.type','not in',['receivable','payable']),('account_id.reconcile','=',True),('account_id.is_cheque','=',True),('full_reconcile_id','=',False),('is_cheque','=',True),('debit','>',0.0)]</field>
  </record>

  <record id="cheque_log_list_action" model="ir.actions.act_window">
    <field name="name">Cheques log</field>
    <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('cheque_view_tree')})]"/>
    <field name="res_model">account.move.line</field>
    <field name="view_mode">form,tree</field>
    <field name="context">{}</field>
    <field name="domain"> [('is_cheque','=',True)]</field>
  </record>

  <menuitem id="menu_cheque_log_action" action="cheque_log_list_action" name="All Cheques log" parent="menu_cheques_register" sequence="3"/>
  <menuitem id="menu_cheques_history" name="Cheques history" parent="menu_cheques" sequence="2"/>
  <menuitem id="menu_cheque_received_action" action="cheque_received_list_action" name="Cheques received" parent="menu_cheques_history" sequence="1"/>
  <menuitem id="menu_cheque_sent_action" action="cheque_sent_list_action" name="Cheques sent" parent="menu_cheques_history" sequence="2"/>

</odoo>