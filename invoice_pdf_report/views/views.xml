<?xml version="1.0" encoding="utf-8"?>
<odoo>

       <!-- Inherit Form View to Modify it -->
    <record id="purchase_order_date" model="ir.ui.view">
        <field name="name">Purchase Order Date</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="childs_id"/>
            </xpath>
            <xpath expr="//div[@name='reminder']" position="after">
                <field name="re_id"/>
                <field name="re_date"/>
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="ref_date"/>
            </xpath>
            <xpath expr="//field[@name='notes']" position="after">
                <field name="subject_id" class="oe_inline" placeholder="Define your Subject ..."/>
                <field name="intro_id" class="oe_inline" placeholder="Define your Introduction ..."/>
                <field name="terms_con" class="oe_inline" placeholder="Define your Introduction ..."/>
                <div class="oe_clear"/>

            </xpath>


        </field>
    </record>


    <record id="invoice_pdf_field" model="ir.ui.view">
        <field name="name">invoice.pdf.report.field</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="payment_reference" position="after">
                <!--                <field name="po_contract_no"/>-->
                <!--                <field name="po_contract_date"/>-->
                <field name="invoice_Type"/>
            </field>
            <xpath expr="//field[@name='invoice_user_id']" position="before">
                <field name="ref_date"/>
            </xpath>
            <!--            <field name="partner_id" position="after">-->
            <!--                <field name="invoice_no" placeholder="Invoice Number"/>-->
            <!--            </field>-->
        </field>
    </record>

    <!-- Inherit Form View to Modify it -->
    <record id="sale_order_bran" model="ir.ui.view">
        <field name="name">sale.order.bran</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='sale_order_template_id']" position="before">
                <field name="childs_id"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="rev_no"/>
                <field name="rev_date"/>
            </xpath>


            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="ref_date"/>

            </xpath>

            <xpath expr="//group[@name='note_group']" position="after">
                <field name="sale_note" nolabel="1" placeholder="Subject..."/>


                <!--                <field name="b_subject" nolabel="1" placeholder="Define your Subject ..."/>-->
                <field name="b_introduction" nolabel="1" placeholder="Define your Introduction ..."/>
                <field name="term_condition" nolabel="1" placeholder="Define your Terms and Conditions  ..."/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="employee_id"/>

            </xpath>
            <!--            <xpath expr="//page" position='after'>-->
            <!--                <page string='Details'>-->
            <!--                    <group>-->
            <!--                        <field name="b_subject"/>-->
            <!--                        <field name="b_introduction"/>-->
            <!--                        <field name="term_condition"/>-->
            <!--                    </group>-->
            <!--                </page>-->
            <!--            </xpath>-->

        </field>
    </record>

</odoo>