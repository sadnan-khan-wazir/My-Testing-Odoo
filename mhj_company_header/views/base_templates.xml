    <!-- hajjaj copy right -->
    <template id="mhj_copyright_top">
      <span style="-webkit-transform: rotate(90deg); position: absolute; top: 150px; left: -112px; z-index:999;
                        font-size:9px !important; padding:0px; margin:0px; display: none;">
