<odoo>
  <data>
    
    <template id="address_layout" inherit_id="web.address_layout" priority="1666">
      <div class="address row" position="replace" />
    </template>

    <template id="external_layout_no_header">
      <t t-if="not o" t-set="o" t-value="doc" />

      <t t-if="not company">
        <t t-if="company_id">
          <t t-set="company" t-value="company_id" />
        </t>
        <t t-elif="o and 'company_id' in o">
          <t t-set="company" t-value="o.company_id.sudo()" />
        </t>
        <t t-else="else">
          <t t-set="company" t-value="res_company" />
        </t>
      </t>

      <t t-if="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key.replace('web','mhj_company_header')}}_no_header">
        <t t-raw="0" />
      </t>
      <t t-else="else" t-call="mhj_company_header.external_layout_standard_no_header">
        <t t-raw="0" />
      </t>
    </template>

    <!-- ######## without header/footer -->
    <!-- standard layout -->
    <template id="external_layout_standard_no_header" inherit_id="web.external_layout_standard" primary="True">
      <xpath expr="//div[contains(@t-attf-class,'header')]" position="replace">
        <div t-attf-class="header o_company_#{company.id}_layout">
          <div class="row"></div>
        </div>
      </xpath>
      <xpath expr="//div[3]" position="replace">
        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
          <div class="text-center" style="border-top: 1px solid black;">
            <div style="min-height:24mm;">
              <img style="max-height:2cm;width:100%;" />
            </div>
            <span style="font-size:9px !important; padding:1px; margin:1px;">
              Page:
              <span class="page" />
              /
              <span class="topage" />
              <t t-call="mhj_company_header.mhj_copyright" />
            </span>
          </div>
        </div>
        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
          <div class="text-center" style="border-top: 1px solid black;">
            <ul class="list-inline mb4">
              <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                                 adding d-inline class fixes the problem-->
              <li t-if="company.phone" class="list-inline-item d-inline">
                <span t-field="company.phone" />
              </li>
              <li t-if="company.email" class="list-inline-item d-inline">
                <span t-field="company.email" />
              </li>
              <li t-if="company.website" class="list-inline-item d-inline">
                <span t-field="company.website" />
              </li>
              <li t-if="company.vat" class="list-inline-item d-inline">
                <t t-esc="company.country_id.vat_label or 'Tax ID'" />
                :
                <span t-field="company.vat" />
              </li>
            </ul>

            <div name="financial_infos">
              <span t-field="company.report_footer" />
            </div>

            <div t-if="report_type == 'pdf'" class="text-muted">
              Page:
              <span class="page" />
              /
              <span class="topage" />
            </div>
          </div>
        </div>

      </xpath>

    </template>

